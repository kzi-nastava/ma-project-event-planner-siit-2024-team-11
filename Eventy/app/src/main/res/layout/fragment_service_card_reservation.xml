<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/service_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="13dp"
    android:layout_marginStart="13dp">

    <!-- service card container -->
    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/event_card_white_background"
        android:elevation="2dp"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- left side of card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/left_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/service_card_yellow_stripe_background"
            android:paddingStart="18dp"
            android:paddingTop="9dp"
            android:paddingEnd="7dp"
            android:paddingBottom="4dp">

            <!-- service name container -->
            <FrameLayout
                android:id="@+id/service_name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/event_card_name_container_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- service name -->
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/albert_sans"
                    android:paddingBottom="5dp"
                    android:text="@string/service_name"
                    android:textFontWeight="800"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </FrameLayout>

            <!-- service category -->
            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:fontFamily="@font/albert_sans"
                android:text="@string/service_category"
                android:maxLines="1"
                android:textColor="@color/home_event_card_label"
                android:textFontWeight="600"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/service_name_container" />

            <!-- service duration text -->
            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:fontFamily="@font/albert_sans"
                android:maxLines="1"
                android:text="@string/service_duration"
                android:textColor="@color/home_event_card_text"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category" />

            <!-- service reservation type text -->
            <TextView
                android:id="@+id/reservation_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:fontFamily="@font/albert_sans"
                android:maxLines="1"
                android:text="@string/service_reservation_type"
                android:textColor="@color/home_event_card_text"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/duration" />

            <!-- event types label -->
            <TextView
                android:id="@+id/event_types_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/albert_sans"
                android:maxLines="1"
                android:text="@string/event_types_label"
                android:textColor="@color/home_event_card_label"
                android:textFontWeight="600"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservation_type" />

            <!-- top 2 event types -->
            <LinearLayout
                android:id="@+id/event_types_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="0dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_types_label">

                <!-- event type 1 container -->
                <LinearLayout
                    android:id="@+id/event_type_container1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/solution_card_event_type_background"
                    android:elevation="1.5dp"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp">

                    <!-- event type 1 -->
                    <TextView
                        android:id="@+id/event_type1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/albert_sans"
                        android:maxLines="1"
                        android:text="@string/event_type1"
                        android:textColor="@color/home_event_card_text"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <!-- event type 2 container -->
                <LinearLayout
                    android:id="@+id/event_type_container2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/solution_card_event_type_background"
                    android:elevation="1.5dp"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp">

                    <!-- event type 2 -->
                    <TextView
                        android:id="@+id/event_type2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/albert_sans"
                        android:maxLines="1"
                        android:text="@string/event_type2"
                        android:textColor="@color/home_event_card_text"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <!-- three dots container -->
                <LinearLayout
                    android:id="@+id/three_dots_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:elevation="1dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <!-- three dots text -->
                    <TextView
                        android:id="@+id/three_dots"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:fontFamily="@font/albert_sans"
                        android:letterSpacing="0.05"
                        android:text="@string/three_dots"
                        android:layout_weight="900"
                        android:textColor="@color/home_event_card_label"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- right side of card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/right_side"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/event_card_white_background">

            <!-- favorite & see more buttons container -->
            <LinearLayout
                android:id="@+id/buttons_container"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <!-- price before discount container -->
                <FrameLayout
                    android:id="@+id/discount_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="16dp">

                        <LinearLayout
                            android:id="@+id/price_before_container"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="1.5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal">

                            <!-- price before discount -->
                            <TextView
                                android:id="@+id/before_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/albert_sans"
                                android:maxLines="1"
                                android:paddingStart="2dp"
                                android:textFontWeight="900"
                                android:text="@string/solution_price_before_discount"
                                android:textColor="@color/home_solution_card_before_price"
                                android:textSize="12sp" />

                            <!-- euro symbol -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1dp"
                                android:fontFamily="@font/albert_sans"
                                android:maxLines="1"
                                android:textFontWeight="900"
                                android:text="@string/euro_symbol"
                                android:textColor="@color/home_solution_card_before_price"
                                android:textSize="10sp"
                                tools:ignore="SmallSp" />
                        </LinearLayout>

                        <!-- crossed out price before discount container -->
                        <LinearLayout
                            android:id="@+id/crossed_out_container"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="1.5dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/solution_card_price_crossed_out"
                            android:orientation="horizontal">

                            <!-- crossed out price before discount -->
                            <TextView
                                android:id="@+id/crossed_out_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/albert_sans"
                                android:maxLines="1"
                                android:textFontWeight="900"
                                android:text="@string/solution_price_before_discount"
                                android:textColor="@color/home_solution_card_before_price_crossed_out"
                                android:textSize="17sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </FrameLayout>

                <!-- price before discount container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- price before discount -->
                    <TextView
                        android:id="@+id/current_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/albert_sans"
                        android:maxLines="1"
                        android:text="@string/solution_current_price"
                        android:textColor="@color/home_event_card_text"
                        android:textFontWeight="900"
                        android:textSize="16sp"/>

                    <!-- euro symbol -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:fontFamily="@font/albert_sans"
                        android:maxLines="1"
                        android:text="@string/euro_symbol"
                        android:textColor="@color/home_event_card_text"
                        android:textFontWeight="900"
                        android:textSize="12sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

            </LinearLayout>

            <!-- service image container -->
            <LinearLayout
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="9dp"
                android:elevation="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttons_container">

                <!-- service image -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bon_jovi"
                    app:shapeAppearanceOverlay="@style/roundedImage"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

