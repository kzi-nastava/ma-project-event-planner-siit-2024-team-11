<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.solutions.featured_solutions.FeaturedSolutionsFragment">

    <!-- Top 5 solutions container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/home_featured_items_background_color">

        <!-- Top 5 solutions dynamically inserted with RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/featured_solutions_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>